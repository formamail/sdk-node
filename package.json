{
  "name": "@formamail/sdk",
  "version": "1.0.0",
  "description": "Official Node.js SDK for FormaMail - Send emails with dynamically generated PDF and Excel attachments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "formamail",
    "email",
    "transactional",
    "pdf",
    "excel",
    "attachments",
    "sdk",
    "api"
  ],
  "author": "FormaMail <support@formamail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/formamail/sdk-node.git"
  },
  "homepage": "https://docs.formamail.com/sdk/node",
  "bugs": {
    "url": "https://github.com/formamail/sdk-node/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
